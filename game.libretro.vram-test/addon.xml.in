<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vram-test"
		name="TestSW VRAM"
		version="1.0.0.1"
		provider-name="Team Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions></extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>true</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.vram-test</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.png</screenshot>
		</assets>
		<summary lang="en_GB">TestSW VRAM</summary>
		<description lang="en_GB">Test rendering to VRAM by drawing a simple checkerboard pattern.</description>
	</extension>
</addon>
